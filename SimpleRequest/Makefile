  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

SHELLTYPE := posix
ifeq (.exe,$(findstring .exe,$(ComSpec)))
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

RESCOMP = windres
INCLUDES += -Isrc -Idependencies -Idependencies/glfw/include -Idependencies/glad/include -Idependencies/imgui
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef

ifeq ($(config),debug)
TARGETDIR = ../bin/Debug-linux/SimpleRequest
TARGET = $(TARGETDIR)/SimpleRequest
OBJDIR = ../bin-int/Debug-linux/SimpleRequest
DEFINES += -D_CRT_SECURE_NO_WARNINGS -DGLFW_INCLUDE_NONE -DSIMPLEREQUEST_DEBUG
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -fPIC -g
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -fPIC -g -std=c++17
LIBS += dependencies/glfw/bin/Debug-linux/glfw/libglfw.a dependencies/glad/bin/Debug-linux/glad/libglad.a -lX11 -ldl -lpthread -lGL
LDDEPS += dependencies/glfw/bin/Debug-linux/glfw/libglfw.a dependencies/glad/bin/Debug-linux/glad/libglad.a
ALL_LDFLAGS += $(LDFLAGS) -Ldependencies/glfw/bin/Debug-linux/glfw -Ldependencies/glad/bin/Debug-linux/glad

else ifeq ($(config),release)
